# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4

[*.{md,yaml,yml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 4
